<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/kid"
        android:layout_width="211dp"
        android:layout_height="0dp"
        android:layout_marginBottom="109dp"
        android:onClick="kid"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parents"
        app:srcCompat="@drawable/velet" />

    <ImageView
        android:id="@+id/parents"
        android:layout_width="192dp"
        android:onClick="parents"
        android:layout_height="0dp"
        android:layout_marginTop="77dp"
        android:layout_marginBottom="27dp"
        app:layout_constraintBottom_toTopOf="@+id/kid"
        app:layout_constraintStart_toStartOf="@+id/kid"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/anababa" />
</androidx.constraintlayout.widget.ConstraintLayout>