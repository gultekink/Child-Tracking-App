<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParentScreen">


    <ImageView
        android:id="@+id/mapId"
        android:layout_width="165dp"
        android:layout_height="0dp"
        android:layout_marginBottom="19dp"
        android:onClick="mapButton"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/map_button" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="244dp"
        android:layout_height="0dp"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="7dp"
        android:text="Canlı lokasyon için tıklayın!"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/mapId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="170dp"
        android:onClick="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/asdaaad" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="172dp"
        android:layout_height="0dp"
        android:layout_marginBottom="6dp"
        android:text="Geçmiş"
        android:textSize="47dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapId" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="213dp"
        android:layout_height="0dp"
        android:layout_marginTop="441dp"
        android:layout_marginBottom="8dp"
        android:text="Yasaklı Bölge Ekleyin"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:onClick="uyariii"
        android:layout_width="122dp"
        android:layout_height="99dp"
        android:layout_marginBottom="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:srcCompat="@drawable/uyarii" />

</androidx.constraintlayout.widget.ConstraintLayout>